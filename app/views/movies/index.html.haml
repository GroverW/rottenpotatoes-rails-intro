-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th= link_to 'Movie Title', movies_path(sort: 'title'), id: 'title_header'
      %th= link_to 'Rating', movies_path(sort: 'rating'), id: 'rating_header'
      %th= link_to 'Release Date', movies_path(sort: 'release_date'), id: 'release_date_header'
      %th= link_to 'More Info', movies_path(sort: 'title')
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
